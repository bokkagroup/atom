<div class="molecule card">
    {{> molecules/image}}
    <div class="text">
        <div class="title">
            <h2>
                {{#if link}}<a href="{{link}}">{{/if}}
                {{title}}
                {{#if link}}</a>{{/if}}
            </h2>
        </div><!--/title-->
        <div class="body">
            {{#if description}}
                {{{description}}}
            {{/if}}
            {{#if subtitle}}
                <div class="subtitle">
                    <span>{{{subtitle}}}</span>
                </div>
            {{/if}}
            {{> atoms/button}}
        </div><!--/body-->
    </div><!--/text-->
</div><!--/card-->