<div class="organism icon-grid {{#if column_class}}{{column_class}}{{/if}}" id="{{id}}">
    <section>
        <div class="container">
            {{> molecules/text}}
            <div class="grid">
                {{#each item}}
                <div class="item">
                    {{> atoms/fa-icon}}
                    {{#if link}}
                    <a href="{{link}}" title="{{title}}">
                    {{/if}}
                        <h3>{{title}}</h3>
                    {{#if link}}
                    </a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div><!--/container -->
    </section>
</div><!--/icon-grid-->