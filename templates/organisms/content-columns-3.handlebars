<div class="organism content-columns-3" id="{{id}}">
    <section>
        <div class="container">
            <div class="header">
                <div class="title">
                    <h2 class="h1">{{title}}</h2>
                </div>
                <div class="subtitle">
                    {{subtitle}}
                </div>
            </div><!--/header -->

            <div class="items">
                {{#each item}}
                    <div class="item">
                        {{> molecules/image}}
                        <div class="text">
                            {{#if title}}
                                <div class="title">
                                    <h5>{{title}}</h5>
                                </div>
                            {{/if}}
                            {{#if description}}
                                <div class="body">
                                    {{{description}}}
                                </div>
                            {{/if}}
                            {{> atoms/button}}
                        </div>
                    </div><!--/item-->
                {{/each}}
            </div><!--/items-->
            {{> atoms/button}}
        </div><!--/container-->
    </section>
</div><!--/content-columns-3-->