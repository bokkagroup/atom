<div id="{{id}}" class="organism content-columns-3 {{#if background_color}}bg-{{background_color}}{{/if}}">
    <section>
        <div class="container">
            <div class="header">
                <div class="title">
                    <h2 class="h1">{{title}}</h2>
                </div>
                <div class="subtitle">
                    {{{description}}}
                </div>
            </div><!--/header -->

            <div class="items">
                {{#each item}}
                    <div class="item">
                        <div class="image">
                            <img src="{{image.small}}">
                        </div><!--/image -->
                        <div class="text">
                            <div class="title">
                                <h5>{{title}}</h5>
                            </div>
                            <div class="body">
                                {{{description}}}
                            </div>
                        </div>
                    </div><!--/item-->
                {{/each}}
            </div><!--/items-->
        </div><!--/container-->
    </section>
</div><!--/content-columns-3-->